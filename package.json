{
    "name": "tg-broadcast",
    "version": "1.0.0",
    "description": "",
    "main": "dist/main/main.js",
    "scripts": {
        "build:main": "tsc --project tsconfig.main.json",
        "build:preload": "tsc --project tsconfig.preload.json",
        "build:renderer": "vite build",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "dev": "vite",
        "start": "npm run build && electron ./dist/main/main.js",
        "dist:win": "npm run build && electron-builder --win",
        "dist:mac": "npm run build && electron-builder --mac",
        "dist:all": "npm run build && electron-builder --win --mac",
        "publish": "npm run build && electron-builder --win --mac --publish always"
    },
    "build": {
        "appId": "ru.thynet.broadcast",
        "productName": "tgBroadcast",
        "directories": {
            "output": "release"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "TYLETAMINE",
                "repo": "tg-broadcast"
            }
        ],
        "files": [
            "dist/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "assets/icon.png",
            "target": "dmg"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "dmg": {
            "format": "ULFO"
        }
    },
    "author": "TYLETAMINE",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.5.2",
        "electron": "^37.5.1",
        "electron-builder": "^26.0.12",
        "electron-rebuild": "^3.2.9",
        "file-loader": "^6.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "webpack-dev-server": "^5.2.2"
    },
    "dependencies": {
        "dotenv": "^17.2.2",
        "telegram": "^2.26.22",
        "vite": "^6.3.6"
    }
}
